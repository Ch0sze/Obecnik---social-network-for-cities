@model List<HomeViewModel.Post>

<div class="mt-3 w-75 justify-content-center">
    <partial name="_CreatePost"/>
    <button id="openModalButton" type="button" class="btn btn-default mb-3">
        O co byste se chtěli podělit ...
        <i class="bi bi-envelope-arrow-up-fill"></i>
    </button>

    <div id="contributionsContainer" class="mb-3">
        @foreach (var post in Model)
        {
            <div class="d-flex align-items-start mt-3 p-3 border rounded shadow-sm thepost">
                <div class="flex-grow-1">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <img src="~/Images/GenericAvatar.png" alt="Avatar"
                            style="width: 30px; height: 30px; user-select: none; pointer-events: none; "/>
                            <strong>@post.CreatedBy</strong>
                            <small class="text-muted">@post.GetFormattedCreatedAt()</small>
                        </div>
                        @if (@post.CreatedBy == User.Identity?.Name)
                        {
                            <div class="ms-auto dropdown">
                                <button type="button" class="btn btn-link p-0 border-0 contribution-settings-btn" 
                                        data-bs-toggle="dropdown">
                                    <i class="bi bi-three-dots-vertical"></i>
                                </button>
                                <div class="dropdown-menu dropdown-menu-start rounded post-settings shadow-sm">
                                    <form asp-action="Delete">
                                        <button type="button" class="dropdown-item delete-post-btn" data-post-id="@post.Id">
                                            Odstranit příspěvek
                                        </button>
                                        <button type="button" class="dropdown-item update-post-btn"
                                                data-post-id="@post.Id"
                                                data-title="@post.Title"
                                                data-content="@post.Description" 
                                                data-photo="@(post.Photo ? Url.Action("GetImage", "Home", new { postId = post.Id }) :"")">
                                            Upravit příspěvek
                                        </button>
                                    </form>
                                </div>
                            </div>
                        }
                    </div>
                    <p class="mb-0 mt-2 text-break"
                       style="font-size: larger;">
                        @post.Title
                    </p>
                    <p class="mb-0 mt-1 message-container text-break"
                       style="font-size: small;">
                        @post.Description
                    </p>
                    @if (post.Photo)
                        {
                            <div class="mt-2 w-100">
                                <img src="@Url.Action("GetImage", "Home", new { postId = post.Id })" 
                                     class="img-fluid rounded" 
                                     style="width: 100%; max-height: 500px; object-fit: contain;"
                                     alt="Post image"/>
                            </div>
                        }
                </div>
            </div>
        }
    </div>
</div>

<div class="modal fade" id="delete-popup" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Odstranit příspěvek</h5>
            </div>
            <div class="modal-body">
                <p>Opravdu chcete tento příspěvek odstranit?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn close-btn" data-bs-dismiss="modal">Zavřít</button>
                <button type="button" class="btn delete-btn" id="confirm-delete">Odstranit</button>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        let postIdToDelete = null;

        // Po kliknutí na "Odstranit příspěvek" se zobrazí modal a uloží se ID příspěvku
        $('.delete-post-btn').click(function () {
            postIdToDelete = $(this).data('post-id'); // Uložení ID příspěvku
            let myModal = new bootstrap.Modal(document.getElementById('delete-popup'));
            myModal.show();
        });
        
        // AJAX odstranění příspěvku bez reloadnutí stránky
        $('#confirm-delete').click(function () {
            if (!postIdToDelete) return;
    
            $.ajax({
                url: '@Url.Action("Delete", "DeletePost")',
                type: 'POST',
                data: { id: postIdToDelete, __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val() },
                success: function (response) {
                    if (response.success) {
                        $('button[data-post-id="' + postIdToDelete + '"]').closest('.thepost').fadeOut(300, function () {
                            $(this).remove();
                        });
                    } else {
                        alert(response.message);
                    }
                },
                error: function () {
                    alert('Chyba při odstraňování příspěvku.');
                }
            });
            let modal = bootstrap.Modal.getInstance(document.getElementById('delete-popup'));
            modal.hide();
        });
    
        // Handle edit post button click
        $('.update-post-btn').click(function() {
            const postId = $(this).data('post-id');
            const title = $(this).data('title');
            const content = $(this).data('content');
            let photoUrl = $(this).data('photo');
            
            // Set the form action to the edit endpoint
            $('#createPostForm').attr('action', '/editposts/' + postId);
            
            // Populate the form fields
            $('#postTitle').val(title);
            $('#postContent').val(content);
            
            // Update character counters
            $('#titleLength').text(`${title.length}/100`);
            $('#contentLength').text(`${content.length}/1000`);
            
            // Handle image preview
            const imagePreviewContainer = $('#imagePreviewContainer');
            const imagePreview = $('#imagePreview');
            
            if (photoUrl) {
                imagePreview.attr('src', photoUrl);
                imagePreviewContainer.show();
            } else {
                imagePreview.attr('src', null);
                imagePreviewContainer.hide();
            }
            
            // Change the publish button text
            $('#publishPost').text('Upravit');
            $('#postTitleHeader').text('Upravit příspěvek');
            
            // Show the modal
            var modal = new bootstrap.Modal(document.getElementById('createPostModal'));
            modal.show();
        });
        
        // Reset form when opening for new post
        $('#openModalButton').click(function() {
            $('#createPostForm').attr('action', '/posts');
            $('#createPostForm').attr('data-mode', 'create');
            $('#createPostForm')[0].reset();
            $('#imagePreview').attr('src', '');
            $('#imagePreviewContainer').hide();
            $('#titleLength').text('0/100');
            $('#contentLength').text('0/1000');
            $('#publishPost').text('Publikovat');
        });
        
        $('#createPostForm').submit(function(e) {
            e.preventDefault();
            
            if (!validateForm()) {
                return false;
            }
            
            const formData = new FormData(this);
            const url = $(this).attr('action');
            const isEdit = url.includes('/editposts/');
            
            if (isEdit && $('#imagePreview').attr('src') === '') {
                formData.append('RemoveImage', 'true');
            }
            
            $.ajax({
                url: url,
                type: isEdit ? 'POST' : 'POST',
                data: formData,
                processData: false,
                contentType: false,
                success: function(response) {
                    if (response.redirect) {
                        window.location.href = response.redirect;
                    } else {
                        location.reload();
                    }
                },
                error: function(xhr) {
                    // Handle errors
                    alert('Error: ' + xhr.responseText);
                }
            });
        });
    });
</script>

