@model List<HomeViewModel.Post>

<div class="mt-3 w-75 justify-content-center">
    <partial name="_CreatePost"/>
    <button id="openModalButton" type="button" class="btn btn-default mb-3">
        O co byste se chtěli podělit ...
        <i class="bi bi-envelope-arrow-up-fill"></i>
    </button>

    <div id="contributionsContainer" class="mb-3">
        @foreach (var post in Model)
        {
            <div class="d-flex align-items-start mt-3 p-3 border rounded shadow-sm">
                <div>
                    <div>
                        <img src="~/Images/GenericAvatar.png" alt="Avatar"
                             style="width: 30px; height: 30px; user-select: none; pointer-events: none; "/>
                        <strong>@post.CreatedBy</strong>
                        <small class="text-muted">@post.GetFormattedCreatedAt()</small>
                    </div>
                    <p class="mb-0 mt-2"
                       style="font-size: larger; width: 100%; max-width: 75vh; overflow-wrap: break-word; word-wrap: break-word; overflow: auto;">
                        @post.Title
                    </p>
                    <p class="mb-0 mt-1 message-container"
                       style="font-size: small;width: 100%; max-width: 75vh; overflow-wrap: break-word; word-wrap: break-word; overflow: auto;">
                        @post.Description
                    </p>
                </div>
                @if (@post.CreatedBy == User.Identity?.Name)
                {
                    <div class="ms-auto">
                        <button type="button" class="btn btn-link p-0 border-0 contribution-settings-btn">
                            <i class="bi bi-three-dots-vertical"></i>
                        </button>
                        <div class="dropdown-menu" aria-labelledby="contribution-settings-btn">
                            <form asp-action="Delete" asp-controller="Home" method="post">
                                <input type="hidden" name="id" value="@post.Id" />
                                <button type="button" class="dropdown-item delete-post-btn" data-post-id="@post.Id">
                                    Odstranit příspěvek
                                </button>
                            </form>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>

<div class="modal" tabindex="-1" id="delete-popup">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Odstranit příspěvek</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p>Opravdu chcete tenhle příspěvek odstranit?</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Zavřít</button>
        <button type="button" class="btn btn-primary" id="confirm-delete">Odstranit</button>
      </div>
    </div>
  </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        $('.contribution-settings-btn').click(function (event) {
            event.stopPropagation();
            $(this).next('.dropdown-menu').toggle();
        });
    
        $(document).click(function () {
            $('.dropdown-menu').hide();
        });
        
        let postIdToDelete = null;

        // Po kliknutí na "Odstranit příspěvek" se zobrazí modal a uloží se ID příspěvku
        $('.delete-post-btn').click(function () {
            postIdToDelete = $(this).data('post-id'); // Uložení ID příspěvku
            let myModal = new bootstrap.Modal(document.getElementById('delete-popup'));
            myModal.show();
        });
        
        // AJAX odstranění příspěvku
        $('#confirm-delete').click(function () {
            if (!postIdToDelete) return;
    
            $.ajax({
                url: '@Url.Action("Delete", "DeletePost")',
                type: 'POST',
                data: { id: postIdToDelete, __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val() },
                success: function (response) {
                    if (response.success) {
                        $('button[data-post-id="' + postIdToDelete + '"]').closest('.d-flex').fadeOut(300, function () {
                            $(this).remove();
                        });
                    } else {
                        alert(response.message);
                    }
                },
                error: function () {
                    alert('Chyba při odstraňování příspěvku.');
                }
            });
            let modal = bootstrap.Modal.getInstance(document.getElementById('delete-popup'));
            modal.hide();
        });
    });

    //"RequestVerificationToken": document.querySelector('meta[name="csrf-token"]').content
</script>

