@model IEnumerable<HomeViewModel.Post>

@foreach (var post in Model)
{
    <div class="d-flex align-items-start mt-3 p-3 border rounded shadow-sm thepost opened-post-box position-relative"
         data-post-id="@post.Id"
         data-title="@post.Title"
         data-content="@post.Description"
         data-photo="@(post.Photo ? Url.Action("GetImage", "Home", new { postId = post.Id }) : "")"
         style="background-color: #ffffff; border-color: #e0e0e0 !important;">
        
        <div class="flex-grow-1">
            <div class="d-flex justify-content-between align-items-center">
                <div class="d-flex align-items-center flex-wrap">
                    <div class="d-flex align-items-center me-2" style="height: 30px;">
                        @if (post.UserHasPhoto)
                        {
                            <img src="@Url.Action("GetUserPhoto", "Home", new { userId = post.CreatedById })"
                                 alt="Avatar"
                                 style="width: 30px; height: 30px; user-select: none; pointer-events: none; border-radius: 50%; object-fit: cover;" />
                        }
                        else
                        {
                            <img src="~/Images/GenericAvatar.png" alt="Avatar"
                                 style="width: 30px; height: 30px; user-select: none; pointer-events: none;" />
                        }
                    </div>
                    <div class="d-flex flex-column flex-sm-row align-items-sm-center">
                        <strong class="me-sm-2">@post.CreatedBy</strong>
                        <small class="text-muted">@post.GetFormattedCreatedAt()</small>
                        <small class="badge text-dark ms-sm-2" style="background-color: #FFF2D6">@(post.IsPetition ? "Petice" : "Diskuze")</small>
                    </div>
                </div>
                @if (post.Status.HasValue && !post.IsAdmin && post.CreatedBy != User.Identity?.Name)
                {
                    var st = post.Status.Value;
                    
                    <small class="badge @(st == PetitionStatus.Open ? "bg-success" : "bg-secondary") me-3">
                        @(st == PetitionStatus.Open ? "Otevřená" : "Uzavřená")
                    </small>
                }

                @if (post.CreatedBy == User.Identity?.Name || post.IsAdmin)
                {
                    <div class="ms-auto d-flex align-items-center">
                        @if (post.Status is PetitionStatus st)
                        {
                            <small class="badge @(st == PetitionStatus.Open ? "bg-success" : "bg-secondary") me-2">
                                @(st == PetitionStatus.Open ? "Otevřená" : "Uzavřená")
                            </small>
                        }
                        @if(!post.IsPetition || post.IsAdmin){
                        <div class="dropdown">
                            <button type="button" class="btn btn-link p-0 border-0 contribution-settings-btn"
                                    data-bs-toggle="dropdown">
                                <i class="bi bi-three-dots-vertical"></i>
                            </button>
                            <div class="dropdown-menu dropdown-menu-start rounded post-settings shadow-sm">
                                <form asp-action="Delete">
                                    @if ((post.CreatedBy == User.Identity?.Name || post.IsAdmin) & !post.IsPetition) {
                                        <button type="button" class="dropdown-item delete-post-btn" data-post-id="@post.Id">
                                            Odstranit příspěvek
                                        </button>
                                    }
                                    @if (post.CreatedBy == User.Identity?.Name & !post.IsPetition) {
                                        <button type="button" class="dropdown-item update-post-btn"
                                                data-post-id="@post.Id"
                                                data-title="@post.Title"
                                                data-content="@post.Description"
                                                data-photo="@(post.Photo ? Url.Action("GetImage", "Home", new { postId = post.Id }) : "")">
                                            Upravit příspěvek
                                        </button>
                                    }
                                    @if (post.IsAdmin) {
                                        <button type="button" class="dropdown-item pin-post-btn"
                                                data-post-id="@post.Id">
                                            @(post.IsPinned ? "Odepnout příspěvek" : "Připnout příspěvek")
                                        </button>
                                    }
                                    
                                </form>
                            </div>
                        </div>
                        }
                    </div>
                }
            </div>
            <p class="mb-0 mt-2 text-break fw-semibold" style="font-size: larger; color: #212529;">
                @post.Title
            </p>
            <p class="mb-0 mt-1 message-container text-break" style="font-size: small;">
                @post.Description
            </p>
            @if (post.Photo)
            {
                <div class="mt-2 w-100">
                    <img src="@Url.Action("GetImage", "Home", new { postId = post.Id })"
                         class="img-fluid rounded"
                         style="width: 100%; max-height: 500px; object-fit: contain;"
                         alt="Post image" />
                </div>
            }
            <div class="d-flex justify-content-end mt-3 pt-1 border-top">
                <button class="btn btn-sm btn-hover-light">
                    <img src="~/icons/Comment.svg" width="18" height="18" class="me-1">
                    <span class="d-none d-sm-inline">Okomentovat</span>
                </button>
                <button class="btn btn-sm btn-hover-light share-btn"
                        data-post-id="@post.Id"
                        data-community-id="@post.CommunityId">
                    <img src="~/icons/Share.svg" style="width: 18px; height: 18px;"></img>
                    <span class="text-label">Sdílet</span>
                </button>
            </div>
        </div>
    </div>
}

<!-- Přidaný skript pro zamezení šíření kliknutí z tlačítek -->
<script>
    document.addEventListener("DOMContentLoaded", function () {
        // Zabránit otevření příspěvku jen při kliknutí na tlačítko Sdílet
        document.querySelectorAll('.btn-hover-light').forEach(function (btn) {
            const icon = btn.querySelector('img');
            if (icon && icon.src.includes('Share.svg')) {
                btn.addEventListener("click", function (e) {
                    e.stopPropagation();
                });
            }
        });

        // Sdílení odkazu
        document.querySelectorAll(".share-btn").forEach(function (btn) {
            btn.addEventListener("click", function (e) {
                e.stopPropagation();

                const postId = btn.dataset.postId;
                const urlParams = new URLSearchParams(window.location.search);
                const communityId = urlParams.get("communityId");

                const shareUrl = `${window.location.origin}/viewpost/${communityId}/${postId}`;

                navigator.clipboard.writeText(shareUrl)
                    .then(() => {
                        // Ukázat hlášku jen jednou
                        if (!btn.classList.contains("alert-shown")) {
                            alert("Odkaz zkopírován do schránky!");
                            btn.classList.add("alert-shown");
                            setTimeout(() => btn.classList.remove("alert-shown"), 1000);
                        }
                    })
                    .catch(err => console.error("Chyba při kopírování:", err));
            });
        });
    });
</script>
