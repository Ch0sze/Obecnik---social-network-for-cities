@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "Zapomenuté heslo";
}

<div class="d-flex align-items-center justify-content-center" style="margin-top: 2rem;">

    <div style="max-width: 500px; width: 100%;">
        <!-- Logo a nadpis -->
        <div class="header-section text-center">
            <img src="~/image.png" alt="Logo" style="height: 50px;" />
            <h2>OBECNÍK</h2>
        </div>

        <!-- Kontejner formuláře se stejným stylem jako login -->
        <div class="login-container" style="background-color: #FFFAEF; padding: 20px; border: 1px solid #F98866; border-radius: 8px;">
            <p class="text-center" style="color: black;">
                Zadejte svůj e-mail a my vám zašleme pokyny, jak obnovit heslo.
            </p>

            <form asp-controller="Account" asp-action="ForgotPasswordSubmit" method="post" novalidate>
                <!-- Email input -->
                <div class="mb-3">
                    <label asp-for="Email" class="login-label" style="color: black;">Email:</label>
                    <input asp-for="Email"
                           class="form-control login-input"
                           placeholder="např. jan@novak.cz"
                           style="background-color: #FAFAFA; border: none; border-bottom: 2px solid #F98866; border-radius: 0; box-shadow: none;" />
                    <span asp-validation-for="Email" class="invalid-feedback"></span>
                </div>

                <!-- Tlačítko pro odeslání -->
                <div class="text-center">
                    <button type="submit" class="login-button"
                            style="background-color: #F98866; color: white; border: none; padding: 10px 20px; border-radius: 20px;">
                        Odeslat pokyny
                    </button>
                </div>
            </form>

            <!-- Zpětný odkaz na přihlášení -->
            <div class="mt-4 text-center">
                <a href="/Account/Login" style="color: #F98866; text-decoration: none;">Zpět na přihlášení</a>
            </div>

            <!-- Případná informační hláška -->
            @if (!string.IsNullOrWhiteSpace(Model.Message))
            {
                <div class="alert alert-info mt-4 text-center" style="background-color: #FDE7E7; border: 1px solid #F98866; color: black; border-radius: 5px;">
                    @Model.Message
                </div>
            }
        </div>
    </div>
</div>