@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "Zapomenuté heslo";
}

<div class="container">
    <div class="row justify-content-center mt-2">
        <div class="col-12 col-md-8 col-lg-6">
            <div class="header-section text-center mb-4">
                <img src="~/image.png" alt="Logo" class="img-fluid" style="max-height: 50px;"/>
                <h2>OBECNÍK</h2>
            </div>

            <!-- Kontejner formuláře s nastavenou maximální šířkou a minimální výškou -->
            <div class="login-container p-4"
                 style="background-color: #FFFAEF; border: 1px solid #F98866; border-radius: 8px; max-width: 600px; margin: auto;">
                <p class="text-center text-dark">
                    Zadejte svůj e-mail a my vám zašleme pokyny, jak obnovit heslo.
                </p>

                <form asp-controller="Account" asp-action="ForgotPasswordSubmit" method="post" novalidate>
                    <div class="mb-3">
                        <label asp-for="Email" class="login-label"
                               style="color: black; font-weight: bold;">Email:</label>
                        <input asp-for="Email"
                               class="form-control login-input @ViewData.ValidationClass(model => model.Email)"
                               placeholder="např. jan@novak.cz"
                               style="background-color: #FAFAFA; border: none; border-bottom: 1px solid #F98866; border-radius: 0; box-shadow: none;"/>
                        <span asp-validation-for="Email" class="invalid-feedback"></span>
                    </div>

                    <!-- Tlačítko pro odeslání, zarovnané na střed -->
                    <div class="text-center">
                        <button type="submit" class="login-button btn btn-primary">
                            Odeslat pokyny
                        </button>
                    </div>
                </form>

                <!-- Zpětný odkaz na přihlášení -->
                <div class="mt-4 text-center">
                    <a href="/Account/Login" class="text-decoration-none" style="color: #F98866;">
                        Zpět na přihlášení
                    </a>
                </div>

                @if (!string.IsNullOrWhiteSpace(Model.Message))
                {
                    <div class="alert alert-info mt-4 text-center" role="alert">
                        @Model.Message
                    </div>
                }
            </div>
        </div>
    </div>
</div>
