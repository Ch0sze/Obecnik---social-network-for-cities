@model LoginViewModel
@{
    ViewData["Title"] = "Zapomenuté heslo";
}

<div class="d-flex align-items-center justify-content-center" style="min-height: 100%;">
    <div style="max-width: 500px; width: 100%;">
        <!-- Logo a nadpis -->
        <div class="header-section text-center">
            <img src="~/image.png" alt="Logo" style="height: 50px;"/>
            <h2>OBECNÍK</h2>
        </div>

        <!-- Kontejner formuláře pro zapomenuté heslo -->
        <div class="login-container">
            <p class="text-center" style="color: black;">
                Zadejte svůj e-mail a my vám zašleme pokyny, jak obnovit heslo.
            </p>
            <form asp-controller="Account" asp-action="ForgotPasswordSubmit" method="post" novalidate>
                <div class="mb-3">
                    <label asp-for="Email" class="login-label" style="color: black;">Email:</label>
                    <input asp-for="Email"
                           class="form-control login-input"
                           placeholder="např. jan@novak.cz"
                           style="background-color: #FAFAFA; border: none; border-bottom: 1px solid #F98866; border-radius: 0; box-shadow: none;"/>
                    <span asp-validation-for="Email" class="invalid-feedback"></span>
                </div>
                <button type="submit" class="login-button">
                    Odeslat pokyny
                </button>
            </form>

            <!-- Zpětný odkaz na přihlášení -->
            <div class="mt-4 text-center">
                <a href="/Account/Login" style="color: #F98866; text-decoration: none;">Zpět na přihlášení</a>
            </div>

            <!-- Případná informační hláška -->
            @if (!string.IsNullOrWhiteSpace(Model.Message))
            {
                <div class="alert alert-info mt-4" role="alert">
                    @Model.Message
                </div>
            }
        </div>
    </div>
</div>