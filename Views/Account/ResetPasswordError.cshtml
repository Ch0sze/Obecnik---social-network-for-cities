@model Application.Api.Models.ErrorViewModel
@{
    ViewData["Title"] = "Neplatný odkaz";
}

<div class="d-flex align-items-center justify-content-center" style="min-height: 100%; display: flex; align-items: center; justify-content: center;">
    <div style="max-width: 500px; width: 100%;">
        <!-- Header sekce s logem a nadpisem -->
        <div class="header-section" style="display: flex; justify-content: center; align-items: center; gap: 10px; margin-bottom: 1rem;">
            <img src="~/image.png" alt="Logo" style="height: 50px;" />
            <h2 style="margin: 0;">OBECNÍK</h2>
        </div>

        <!-- Kontejner pro chybové hlášení -->
        <div class="login-container" style="background-color: #FFFAEF; border: 1px solid #F98866; border-radius: 8px; padding: 2rem;">
            <div class="alert alert-danger" style="margin-bottom: 1rem; text-align: center; color: #721c24; background-color: #f8d7da; border-color: #f5c6cb; padding: 0.75rem 1.25rem; border: 1px solid transparent; border-radius: 0.25rem;">
                @Model.Message
            </div>
            <div style="text-align: center;">
                <a href="/Account/Login" style="background-color: #F98866; border: none; color: #FFF; padding: 0.5rem 1.5rem; border-radius: 9999px; font-weight: 600; cursor: pointer; font-size: 0.95rem; text-decoration: none;">
                    Přejít na přihlášení
                </a>
            </div>
        </div>
    </div>
</div>