@model LoginViewModel
@{
    ViewData["Title"] = "Přihlášení";
}

<div class="d-flex align-items-center justify-content-center wrapper">
    <div class="inner-container">
        <!-- Logo a nadpis mimo kontejner formuláře -->
        <!-- Logo and heading -->
        <div class="header-section text-center mb-4">
            <!-- jen na xs (do 576 px) -->
            <img src="~/image.png"
                 class="d-block d-sm-none img-fluid"
                 style="height:100px; width:auto;"
                 alt="Logo">

            <!-- od sm (576 px) výš -->
            <img src="~/image.png"
                 class="d-none d-sm-block img-fluid"
                 style="height:171px; width:auto;"
                 alt="Logo">

            <h2 class="m-0">OBECNÍK</h2>
        </div>

        <!-- Kontejner pouze pro formulář -->
        <div class="login-container">
            <form asp-controller="Account" asp-action="LoginSubmit" method="post" novalidate>
                <input type="hidden" asp-for="ReturnUrl"/>

                <!-- Email -->
                <div class="mb-3">
                    <label asp-for="Email" class="login-label">Email:</label>
                    <input asp-for="Email" class="form-control @ViewData.ValidationClass(model => model.Email)"
                           placeholder="např. jan@novak.cz"/>
                    <span asp-validation-for="Email" class="invalid-feedback"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Password" class="login-label">Heslo:</label>
                    <div class="d-flex justify-content-between align-items-end flex-wrap">
                        <div class="flex-grow-1 me-2">
                            <input asp-for="Password" class="form-control @ViewData.ValidationClass(model => model.Password)"
                                   placeholder="********"/>
                            <span asp-validation-for="Password" class="invalid-feedback"></span>
                        </div>

                        @if (TempData["ErrorMessage"] != null)
                        {
                            <div class="alert alert-danger w-100 mt-2">
                                @TempData["ErrorMessage"]
                            </div>
                        }

                        <button type="submit" class="login-button">
                            Přihlásit se
                        </button>
                    </div>

                    <div class="mt-2 text-center">
                        <a href="/Account/ForgotPassword">Zapomněli jste heslo?</a>
                    </div>
                </div>

            </form>

            @if (!string.IsNullOrWhiteSpace(Model.Message))
            {
                <div class="alert alert-danger mt-4" role="alert">
                    @Model.Message
                </div>
            }
        </div>

        <div class="mt-4 login-link text-center">
            Nemáte účet? <a href="/Account/Register">Registrujte se zde</a>
        </div>
    </div>
</div>
