@model RegisterViewModel
@{
    ViewData["Title"] = "Registrace";
}

<div class="wrapper d-flex justify-content-center">
    <div class="inner-container">
        <!-- Logo and heading -->
        <div class="header-section text-center mb-4">
            <!-- jen na xs (do 576 px) -->
            <img src="~/image.png"
                 class="d-block d-sm-none img-fluid"
                 style="height:100px; width:auto;"
                 alt="Logo">

            <!-- od sm (576 px) výš -->
            <img src="~/image.png"
                 class="d-none d-sm-block img-fluid"
                 style="height:171px; width:auto;"
                 alt="Logo">

            <h2 class="m-0">OBECNÍK</h2>
        </div>



        <!-- Form container -->
        <div class="register-container">
            <form asp-controller="Account" asp-action="RegisterSubmit" method="post" novalidate id="register-form">
                <!-- Email -->
                <div class="mb-3">
                    <label asp-for="Email" class="form-label">Email:</label>
                    <input asp-for="Email" class="form-control register-input @ViewData.ValidationClass(m=>m.Email)" placeholder="Email"/>
                    <span asp-validation-for="Email" class="invalid-feedback"></span>
                </div>
                <!-- Password -->
                <div class="mb-3">
                    <label asp-for="Password" class="form-label">Heslo:</label>
                    <input asp-for="Password" type="password" class="form-control register-input @ViewData.ValidationClass(m=>m.Password)" placeholder="********"/>
                    <small class="form-text text-muted">Heslo musí obsahovat alespoň jedno velké písmeno a číslo</small>
                    <span asp-validation-for="Password" class="invalid-feedback"></span>
                </div>
                <!-- Repeat Password -->
                <div class="mb-3">
                    <label asp-for="PasswordRepeat" class="form-label">Opakovat heslo:</label>
                    <input asp-for="PasswordRepeat" type="password" class="form-control register-input @ViewData.ValidationClass(m=>m.PasswordRepeat)" placeholder="********"/>
                    <span asp-validation-for="PasswordRepeat" class="invalid-feedback"></span>
                </div>
                <!-- First Name -->
                <div class="mb-3">
                    <label asp-for="FirstName" class="form-label">Jméno:</label>
                    <input asp-for="FirstName" class="form-control register-input @ViewData.ValidationClass(m=>m.FirstName)" placeholder="Jméno"/>
                    <span asp-validation-for="FirstName" class="invalid-feedback"></span>
                </div>
                <!-- Last Name -->
                <div class="mb-3">
                    <label asp-for="LastName" class="form-label">Příjmení:</label>
                    <input asp-for="LastName" class="form-control register-input @ViewData.ValidationClass(m=>m.LastName)" placeholder="Příjmení"/>
                    <span asp-validation-for="LastName" class="invalid-feedback"></span>
                </div>
                <!-- Address -->
                <div class="mb-3 position-relative">
                    <label asp-for="Residence" class="form-label">Lokalita:</label>
                    <input id="readonlyInput" type="text" class="form-control register-input readonly" placeholder="Vyberte adresu a PSČ" readonly/>
                    <input id="searchInput" type="text" class="form-control register-input search" placeholder="Zadejte adresu nebo PSČ"/>
                    <input type="hidden" asp-for="Residence" id="residenceField"/>
                    <input type="hidden" asp-for="PostalCode" id="postalcodeField"/>
                    <ul id="suggestions" class="list-group suggestions"></ul>
                    <small class="form-text text-muted">Pokud nemůžete najít svou adressu, zkuste zadat PSČ</small>
                    <span asp-validation-for="Residence" class="invalid-feedback"></span>
                    <span asp-validation-for="PostalCode" class="invalid-feedback"></span>
                </div>
                <!-- Terms checkbox -->
                <div class="form-check mb-3">
                    <input type="checkbox" id="terms" class="form-check-input"/>
                    <label for="terms" class="form-check-label">
                        Souhlasím s <a href="#" id="terms-link">podmínkami užití</a>
                    </label>
                </div>
                <div id="terms-error" class="text-danger mb-3">Musíte souhlasit s podmínkami užití pro registraci</div>
                <!-- Submit -->
                <div class="text-center">
                    <button type="submit" class="register-button" id="submit-button" disabled>Registrace</button>
                </div>
            </form>

            @if (!string.IsNullOrWhiteSpace(Model.Message))
            {
                <div class="alert alert-danger mt-4 text-center">@Model.Message</div>
            }
        </div>

        <div class="mt-4 register-link text-center">
            Máte účet? <a href="/Account/Login">Přihlašte se zde</a>
        </div>
    </div>
</div>
