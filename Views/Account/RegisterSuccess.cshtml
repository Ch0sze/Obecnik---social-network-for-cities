@{
    ViewData["Title"] = "Registration was successful";
}

<link href="/css/output.css" rel="stylesheet">
<link href="https://fonts.googleapis.com/css2?family=Inria+Sans:wght@400;700&display=swap" rel="stylesheet">

<div class="row justify-content-center">
    <div class="mt-2 col-sm-12 col-md-10 col-lg-8 col-xl-6 text-center font-inria">
        <h1 class="text-4xl">Děkujeme Vám za registraci</h1>
        <p class="text-lg">Vaše registrace byla úspěšná, nyní se můžete příhlásit.</p>
        <div class="d-flex justify-content-center">
            <a asp-controller="Account" asp-action="Login" class="mt-3 px-2 py-2 w-40 font-roboto text-white text-[0.95rem]
               rounded-full bg-orange hover:bg-[#f77755] focus:bg-[#f77755] active:bg-[#f77755]
               border-none outline-none transition-all"
            id="submit-button">
                Přihlásit se
            </a>
        </div>
    </div>
</div>
