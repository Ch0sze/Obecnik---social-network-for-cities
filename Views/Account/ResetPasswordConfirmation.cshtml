@{
    ViewData["Title"] = "Heslo změněno";
}
<!DOCTYPE html>
<html lang="cs">
<head>
    <meta charset="utf-8"/>
    <title>@ViewData["Title"]</title>
    <style>
        /* Reset základních stylů */
        html, body {
            margin: 0;
            padding: 0;
            height: 100%;
            font-family: Arial, sans-serif;
        }

        /* Flex kontejnery pro centrování obsahu */
        .d-flex {
            display: flex;
        }

        .align-items-center {
            align-items: center;
        }

        .justify-content-center {
            justify-content: center;
        }

        /* Kontejner pro formuláře a zprávy */
        .login-container {
            background-color: #FFFAEF; /* Světlé krémové pozadí */
            border: 1px solid #F98866;
            border-radius: 8px;
            padding: 2rem;
        }

        /* Hlavička s logem a nadpisem */
        .header-section {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 10px;
            margin-bottom: 1rem;
        }

        .header-section img {
            height: 50px;
        }

        .header-section h2 {
            margin: 0;
        }

        /* Odkazy – sjednocený styl napříč stránkami */
        .login-link,
        .login-link:link,
        .login-link:visited,
        .login-link:hover,
        .login-link:active {
            color: #F98866 !important;
            text-decoration: none;
        }
    </style>
</head>
<body>
<div class="d-flex align-items-center justify-content-center" style="min-height: 100%;">
    <div style="max-width: 500px; width: 100%;">
        <!-- Hlavička se logem a nadpisem -->
        <div class="header-section">
            <img src="~/image.png" alt="Logo"/>
            <h2>Heslo změněno</h2>
        </div>
        <!-- Kontejner pro zprávu -->
        <div class="login-container">
            <p>Heslo bylo úspěšně změněno</p>
            <p><a asp-action="Login" asp-controller="Account" class="login-link">Přihlásit se</a></p>
        </div>
    </div>
</div>
</body>
</html>
