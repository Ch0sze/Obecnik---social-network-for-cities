@model ResetPasswordViewModel
@{
    ViewData["Title"] = "Reset hesla";
}





<div class="d-flex align-items-center justify-content-center" style="min-height: 100%;">
    <div style="max-width: 500px; width: 100%;">
        <div class="header-section">
            <img src="~/image.png" alt="Logo"/>
            <h2>Změna hesla</h2>
        </div>

        <div class="login-container">
            <form asp-action="ResetPasswordSubmit" method="post">
                <input type="hidden" asp-for="Token"/>
                <input type="hidden" asp-for="Email"/>

                <div class="mb-3">
                    <label asp-for="NewPassword" class="login-label" style="color: black; font-weight: bold;">Nové
                        heslo:</label>
                    <input asp-for="NewPassword" type="password"
                           class="form-control register-input @ViewData.ValidationClass(model => model.NewPassword)"
                           placeholder="********" style="background-color: #FAFAFA !important; 
                               border: none !important; border-bottom: 1px solid #F98866 !important; border-radius: 0 !important;
                               box-shadow: none !important; outline: none !important;"/>
                    <span asp-validation-for="NewPassword" class="invalid-feedback"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ConfirmPassword" class="login-label" style="color: black; font-weight: bold;">Potvrdit
                        heslo:</label>
                    <input asp-for="ConfirmPassword" type="password"
                           class="form-control register-input @ViewData.ValidationClass(model => model.ConfirmPassword)"
                           placeholder="********" style="background-color: #FAFAFA !important; 
                               border: none !important; border-bottom: 1px solid #F98866 !important; border-radius: 0 !important;
                               box-shadow: none !important; outline: none !important;"/>
                    <span asp-validation-for="ConfirmPassword" class="invalid-feedback"></span>
                </div>

                <div style="text-align: center;">
                    <button type="submit" class="login-button">Změnit heslo</button>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    /* Kontejner formuláře */
    .login-container {
        background-color: #FFFAEF; /* Světlé krémové pozadí */
        border: 1px solid #F98866;
        border-radius: 8px;
        padding: 2rem;
    }

    /* Sekce pro logo a nadpis */
    .header-section {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 10px;
        margin-bottom: 1rem;
    }

    .header-section img {
        height: 100px;
    }

    .header-section h2 {
        margin: 0;
    }

    /* Tlačítko ve tvaru oválu */
    .login-button {
        background-color: #F98866;
        border: none;
        color: #FFF;
        padding: 0.5rem 1.5rem;
        border-radius: 9999px;
        font-weight: 600;
        cursor: pointer;
        font-size: 0.95rem;
    }

    .login-button:hover {
        background-color: #f77755;
    }

    /* Odkazy */
    .login-link a,
    .login-link a:link,
    .login-link a:visited,
    .login-link a:hover,
    .login-link a:active {
        color: #F98866 !important;
        text-decoration: none;
    }

    /* Styl pro register-input – stejný jako v registrační stránce */
    .register-input {
        background-color: #FAFAFA !important;
        border: none !important;
        border-bottom: 1px solid #F98866 !important;
        border-radius: 0 !important;
        box-shadow: none !important;
        outline: none !important;
    }
</style>
