@model CombinedViewModel

@{
    ViewData["Title"] = "SuperAdmin";
}
<!-- Left Sidebar -->
<div class="d-flex min-vh-100">
    <div class="bg-warning bg-opacity-25 d-flex flex-column vh-100 position-sticky top-0" id="leftSidebar">
        <partial name="LeftSidebar" model="Model" />
    </div>

    <div class="container mt-4">
        <h1>Žádosti:</h1>

        @if (Model.AdminRequestViewModel?.Any() == true)
        {
            <div id="adminRequestsContainer">
                @foreach (var request in Model.AdminRequestViewModel)
                {
                    <div class="d-flex justify-content-between align-items-start mt-3 p-3 border rounded shadow-sm bg-white">
                        <div class="flex-grow-1">
                            <p class="mb-1"><strong>Uživatel:</strong> @($"{request.User?.Firstname} {request.User?.LastName}")</p>
                            <p class="mb-1"><strong>Oficiální email:</strong> @request.OfficialEmail</p>
                            <p class="mb-1"><strong>Komunita:</strong> @request.Community?.Name</p>
                            <p class="mb-1"><strong>Datum žádosti:</strong> @request.RequestDate.ToString("dd.MM.yyyy")</p>

                            @if (!string.IsNullOrWhiteSpace(request.Notes))
                            {
                                <p class="mt-2 mb-0"><strong>Poznámka:</strong></p>
                                <p class="fst-italic text-muted">@request.Notes</p>
                            }
                        </div>

                        <div class="d-flex flex-column ms-3">
                            <form asp-action="AcceptSuperAdminRequest" asp-route-id="@request.Id" method="post" class="mb-1">
                                <button type="submit" class="btn btn-success btn-sm rounded-circle d-flex justify-content-center align-items-center"
                                        title="Přijmout" style="width: 55px; height: 55px;">
                                    <i class="bi bi-check-lg"></i>
                                </button>
                            </form>
                            <form asp-action="RejectSuperAdminRequest" asp-route-id="@request.Id" method="post">
                                <button type="submit" class="btn btn-danger btn-sm rounded-circle d-flex justify-content-center align-items-center"
                                        title="Zamítnout" style="width: 55px; height: 55px;">
                                    <i class="bi bi-x-lg"></i>
                                </button>
                            </form>
                        </div>

                    </div>
                }
            </div>
        }
        else
        {
            <div class="alert alert-info mt-3">Žádné čekající žádosti.</div>
        }
    </div>
    <!-- Right Sidebar -->
    <div class="bg-warning bg-opacity-25 d-flex flex-column vh-100 position-sticky top-0">
        <partial name="RightSidebar" model="Model" />
    </div>
</div>
<partial name="ToggleButton" />
@Html.Partial("_AddCommunity")