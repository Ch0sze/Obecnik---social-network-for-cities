        $(document).on('click', '.opened-post-box', function (e) {
            if ($(e.target).closest('.contribution-settings-btn, .dropdown-menu').length > 0) return;

            const postId = $(this).data('post-id');
            console.log('Odesílání požadavku pro příspěvek ID:', postId);

            $.ajax({
                url: '/OpenedPost/' + postId,
                type: 'GET',
                success: function (modalHtml) {
                    console.log('Úspěšně načtený obsah pro příspěvek', postId);

                    // Odstranit starý modal
                    $('#openedPostModal').remove();

                    // Přidat nový modal
                    $('body').append(modalHtml);

                    // Uložit původní URL před změnou
                    originalUrl = window.location.href;

                    // Aktualizace URL s novým parametrem openPostId
                    const newUrl = new URL(window.location);
                    newUrl.searchParams.set('openPostId', postId);
                    window.history.pushState({ path: newUrl.href }, '', newUrl.href);

                    // Otevřít modal
                    const modalElement = document.getElementById('openedPostModal');
                    const modal = new bootstrap.Modal(modalElement);
                    modal.show();

                    // Uložíme si currentUrl do modalu
                    $(modalElement).data('original-url', originalUrl);

                    // Po zavření modalu vrátit URL zpět
                    $(modalElement).on('hidden.bs.modal', function () {
                        window.history.replaceState({}, '', originalUrl);
                    });
                },
                error: function (xhr, status, error) {
                    console.error('Chyba AJAX požadavku:', error);
                    if (xhr.status === 401) {
                        window.location.href = '/Account/Logout';
                        return;
                    }
                    alert('Nepodařilo se načíst příspěvek.');
                }
            });
        });

        // Po zavření modalu, vrátíme zpět původní URL (pokud došlo k otevření s URL parametrem)
        $(document).on('click', '.modal', function () {
            if (window.location.href.includes('openPostId')) {
                window.history.replaceState({}, '', originalUrl);
            }
        });

        let postIdToDelete = null;

        // Po kliknutí na "Odstranit příspěvek" se zobrazí modal a uloží se ID příspěvku
        $(document).on('click', '.delete-post-btn', function () {
            postIdToDelete = $(this).data('post-id'); // Uložení ID příspěvku
            let myModal = new bootstrap.Modal(document.getElementById('delete-popup'));
            myModal.show();
        });
        
        // AJAX odstranění příspěvku bez reloadnutí stránky
        $('#confirm-delete').click(function () {
            if (!postIdToDelete) return;
    
            $.ajax({
                url: '@Url.Action("Delete", "DeletePost")',
                type: 'POST',
                data: { id: postIdToDelete, __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val() },
                success: function (response) {
                    if (response.success) {
                        $('button[data-post-id="' + postIdToDelete + '"]').closest('.thepost').fadeOut(300, function () {
                            $(this).remove();
                        });
                    } else {
                        alert(response.message);
                    }
                },
                error: function (xhr, status, error) {
                    console.error('Chyba AJAX požadavku:', error);
                    if (xhr.status === 400) { 
                            window.location.href = '/Account/Logout'; 
                            return; 
                    }
                    alert('Nepodařilo se odstranit příspěvek.');
                }
            });
            let modal = bootstrap.Modal.getInstance(document.getElementById('delete-popup'));
            modal.hide();
        });
    
        // Handle edit post button click
        $(document).on('click', '.update-post-btn', function () {
            const postId = $(this).data('post-id');
            const title = $(this).data('title');
            const content = $(this).data('content');
            let photoUrl = $(this).data('photo');
            
            // Set the form action to the edit endpoint
            $('#createPostForm').attr('action', '/editposts/' + postId);
            
            // Populate the form fields
            $('#postTitle').val(title);
            $('#postContent').val(content);
            
            // Update character counters
            $('#titleLength').text(`${title.length}/100`);
            $('#contentLength').text(`${content.length}/1000`);
            
            // Handle image preview
            const imagePreviewContainer = $('#imagePreviewContainer');
            const imagePreview = $('#imagePreview');
            
            if (photoUrl) {
                imagePreview.attr('src', photoUrl);
                imagePreviewContainer.show();
            } else {
                imagePreview.attr('src', null);
                imagePreviewContainer.hide();
            }
            
            // Change the publish button text
            $('#publishPost').text('Upravit');
            $('#postTitleHeader').text('Upravit příspěvek');
            
            // Show the modal
            var modal = new bootstrap.Modal(document.getElementById('createPostModal'));
            modal.show();
        });
        
        // Reset form when opening for new post
        $('#openModalButton').click(function() {
            $('#createPostForm').attr('action', '/posts');
            $('#createPostForm').attr('data-mode', 'create');
            $('#createPostForm')[0].reset();
            $('#imagePreview').attr('src', '');
            $('#imagePreviewContainer').hide();
            $('#titleLength').text('0/100');
            $('#contentLength').text('0/1000');
            $('#postTitleHeader').text('Vytvořit příspěvek');
            $('#publishPost').text('Publikovat');
        });
        
        $('#createPostForm').submit(function(e) {
            e.preventDefault();
            
            if (!validateForm()) {
                return false;
            }
            
            const formData = new FormData(this);
            const url = $(this).attr('action');
            const isEdit = url.includes('/editposts/');
            
            if (isEdit && $('#imagePreview').attr('src') === '') {
                formData.append('RemoveImage', 'true');
            }
            
            $.ajax({
                url: url,
                type: isEdit ? 'POST' : 'POST',
                data: formData,
                processData: false,
                contentType: false,
                success: function(response) {
                    if (response.redirect) {
                        window.location.href = response.redirect;
                    } else {
                        location.reload();
                    }
                },
                error: function(xhr) {
                    // Handle errors
                    alert('Error: ' + xhr.responseText);
                }
            });
        });
        
        // Handle pin/unpin post
        $(document).on('click', '.pin-post-btn', function() {
            const postId = $(this).data('post-id');
            const button = $(this);
            const communityId = getCommunityIdFromUrl();
            
            $.ajax({
                url: '/toggle-pin/' + postId,
                type: 'POST',
                data: {
                    communityId: communityId // Pass community ID if needed by the server
                },
                success: function(response) {
                    if (response.success) {
                        button.text(response.isPinned ? "Odepnout příspěvek" : "Připnout příspěvek");
                        button.toggleClass('active', response.isPinned);
                        
                        // Refresh pinned posts if dropdown is open
                        if ($('#pinnedPostsDropdown').hasClass('show')) {
                            loadPinnedPosts();
                        }
                    }
                },
                error: function() {
                    alert('Chyba při změně stavu připnutí příspěvku.');
                }
            });
        });
        
        function getCommunityIdFromUrl() {
            const urlParams = new URLSearchParams(window.location.search);
            return urlParams.get('communityId') || '';
        }
        
        function loadPinnedPosts() {
            const communityId = getCommunityIdFromUrl();
            const loadingSpinner = $('#pinnedPostsLoading');
            const noPinnedItem = $('#noPinnedPosts');
            const dropdown = $('#pinnedPostsDropdown');
            
            if (dropdown.find('.pinned-post-item').length === 0) {
                loadingSpinner.show();
                noPinnedItem.hide();
            }
            
            $.ajax({
                url: '/get-pinned-posts',
                type: 'GET',
                data: {
                    communityId: communityId  // Pass the current community ID
                },
                success: function(response) {   
                    // Clear existing pinned posts (except the header and no-posts message)
                    dropdown.find('.pinned-post-item').remove();
                    
                    if (response.length > 0) {
                        noPinnedItem.hide();
                        
                        response.forEach(post => {
                            // Format the date (you might want to use a better date formatter)
                            const formattedDate = new Date(post.createdAt).toLocaleDateString();
                            
                            const shortTitle = post.title.length > 75 
                                ? post.title.substring(0, 75) + '...' 
                                : post.title;
                            
                            const shortDescription = post.description.length > 150 
                                ? post.description.substring(0, 150) + '...' 
                                : post.description;
                            
                            const userPhotoUrl = post.userHasPhoto 
                                ? `/user-photo/${post.createdById}`
                                : '/Images/GenericAvatar.png';
                            
                            const item = $(`
                                <li class="pinned-post-item border-bottom position-relative">
                                    ${post.isAdmin ? 
                                        `<button class="btn position-absolute end-0 top-0 p-2 unpin-btn" 
                                                 data-post-id="${post.id}"
                                                 style="z-index: 1; margin: 10px; border: none; background: transparent;">
                                             <i class="bi bi-x-lg" style="font-size: 1.25rem; transition: all 0.2s;"
                                                onmouseover="this.style.color='#ff4d59'"
                                                onmouseout="this.style.color='inherit'"
                                                onmousedown="this.style.color='#ff4d59'"></i>
                                         </button>` 
                                        : ''
                                    }
                                    <a class="dropdown-item p-3 pin" href="#" data-post-id="${post.id}"
                                        style="background-color: inherit !important;"
                                        onmouseover="this.style.backgroundColor='#FFF2D6'"
                                        onmouseout="this.style.backgroundColor='inherit'"
                                        onmousedown="this.style.backgroundColor='#FFF2D6'">
                                        <div class="d-flex justify-content-between align-items-center mb-2">
                                            <div class="d-flex align-items-center">
                                                <div class="me-2">
                                                    <img src="${userPhotoUrl}" 
                                                        alt="Avatar"
                                                        style="width: 30px; height: 30px; user-select: none; 
                                                            pointer-events: none; border-radius: 50%; object-fit: cover;" />
                                                </div>
                                                <div>
                                                    <strong style="color: #212529;">${post.createdBy}</strong>
                                                </div>
                                                <div>
                                                    <small class="text-muted" style="margin-left: 10px;">${formattedDate}</small>
                                                </div>
                                            </div>
                                        </div>
                                        <p class="mb-2 fw-semibold text-wrap" style="font-size: larger; color: #212529; word-break: break-word;">${shortTitle}</p>
                                        <p class="mb-2 text-wrap" style="font-size: small; color: #212529; word-break: break-word;">${shortDescription}</p>
                                    </a>
                                </li>
                            `);
                            
                            dropdown.append(item);
                        });
                    } else {
                        noPinnedItem.show();
                    }
                },
                error: function(xhr, status, error) {
                    console.error("Error loading pinned posts:", error);
                    noPinnedItem.show();
                    loadingSpinner.hide();
                },
                complete: function() {
                    loadingSpinner.hide();
                }
            });
        }
        
        $(document).on('click', '.unpin-btn', function(e) {
            e.stopPropagation();
            const postId = $(this).data('post-id');
            const communityId = getCommunityIdFromUrl();
            
            // Show loading on the button
            const $button = $(this);
            $button.html('');
            
            $.ajax({
                url: '/toggle-pin/' + postId,
                type: 'POST',
                data: { communityId: communityId },
                success: function(response) {
                    if (response.success) {
                        // Remove from pinned posts dropdown
                        $button.closest('.pinned-post-item').fadeOut(300, function() {
                            $(this).remove();
                            if ($('#pinnedPostsDropdown .pinned-post-item').length === 0) {
                                $('#noPinnedPosts').show();
                            }
                        });
                        updatePinButton(postId, response.isPinned);
                        // Update the pin button text in the three-dot menu
                        $(`.pin-post-btn[data-post-id="${postId}"]`)
                            .text("Připnout příspěvek")
                            .removeClass('active');
                    }
                },
                error: function() {
                }
            });
        });
        
        function updatePinButton(postId, isPinned) {
            const $pinButton = $(`.pin-post-btn[data-post-id="${postId}"]`);
            if ($pinButton.length) {
                $pinButton.text(isPinned ? "Odepnout příspěvek" : "Připnout příspěvek")
                         .toggleClass('active', isPinned);
            }
        }
        
        // Load pinned posts when dropdown is shown
        $('#openPinsButton').on('click', function() {
            loadPinnedPosts();
        });
        
        // Handle clicking on a pinned post in dropdown
        $(document).on('click', '.pinned-post-item a', function(e) {
            e.preventDefault();
            const postId = $(this).data('post-id');
            $('.opened-post-box[data-post-id="' + postId + '"]').trigger('click');
        });
    });
</script>

