@model List<HomeViewModel.Post>

<div class="mt-3 w-75 justify-content-center">
    <partial name="_CreatePost"/>
    <div class="d-flex align-items-center">
        <button id="openModalButton" type="button" class="btn ">
            Přidat příspěvek ...
            <i class="bi bi-envelope-arrow-up-fill"></i>
        </button>
        <div class="dropdown ms-1">
            <button id="openPinsButton" class="btn p-0" data-bs-auto-close="outside" data-bs-toggle="dropdown" aria-expanded="false">
                <img src="~/icons/Pin.svg" alt="bell" style="width: 30px; height: 30px;">
            </button>
            <ul class="dropdown-menu dropdown-menu-end shadow" style="width: 350px;">
				<h6 class="dropdown-header">
					<img src="~/icons/Pin.svg" alt="Pin" style="width: 16px; height: 16px; margin-bottom: 3px;">
					Připnuté příspěvky
				</h6>
				<ul id="pinnedPostsDropdown">
					<li id="pinnedPostsLoading" class="px-3 py-3 text-center" style="display: none;">
                    	<img src="~/Images/Loader.svg" alt="Loading..." style="width: 3rem; height: 3rem;" />
                	</li>
                	<li id="noPinnedPosts" class="px-3 py-3 text-center">
						<small class="text-muted">Žádné připnuté příspěvky</small>
					</li>
                	<!-- Pinned posts will be loaded here via AJAX -->
				</ul>
            </ul>
        </div>
    </div>

    <div id="contributionsContainer" class="mb-3">
        @if (!Model.Any())
        {
            <div id="noPostsMessage" class="text-center text-muted py-4">
                Ještě tady nic není, buďte první kdo něco přispěje! :)
            </div>
        }
        @foreach (var post in Model.Take(30))
        {
            <partial name="_PostsPartial" model="new List<HomeViewModel.Post> { post }"/>
        }
    </div>
    <div id="loading" style="display: none; text-align: center;">
        <img src="~/Images/Loader.svg" alt="Loading..." style="width: 6rem; height: 6rem;" />
    </div>
</div>

<div class="modal fade" id="delete-popup" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Odstranit příspěvek</h5>
            </div>
            <div class="modal-body">
                <p>Opravdu chcete tento příspěvek odstranit?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn close-btn" data-bs-dismiss="modal">Zavřít</button>
                <button type="button" class="btn delete-btn" id="confirm-delete">Odstranit</button>
            </div>
        </div>
    </div>
</div>

